{
    "name": "backend-services",
    "version": "1.0.0",
    "description": "Contains all backend services created by nicanderhery",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc",
        "dev": "tsc-watch --onSuccess \"node ./dist/index.js\"",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write *.{ts,md,json} --config ./.prettierrc",
        "clean": "rm -rf ./dist",
        "start": "node ./dist/index.js",
        "start:background": "pm2 start ./dist/index.js --name backend-services",
        "production": "npm run clean && npm run build && npm run start:background"
    },
    "keywords": [
        "backend",
        "node",
        "typescript"
    ],
    "author": "nicanderhery@gmail.com",
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/multer": "^1.4.7",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.0",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.1.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint"
        }
    },
    "dependencies": {
        "cors": "^2.8.5",
        "csvtojson": "^2.0.10",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "multer": "^1.4.5-lts.1"
    }
}
